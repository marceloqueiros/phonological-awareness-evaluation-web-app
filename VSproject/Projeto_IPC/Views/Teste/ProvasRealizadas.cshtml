@model IEnumerable<Projeto_IPC.Models.TesteParaListar>

@{
    ViewBag.Title = "Provas Realizadas";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

    <div class="row">
        <div class="box box-primary">
            <div class="box-body">
                    <table class="table table-striped table-bordered" id="tabela">
                        <thead>
                            <tr class="bg-primary" style="background-color:#4b646f;">
                                <th>Paciente</th>
                                <th>CSI Pontos</th>
                                <th>CFI Pontos</th>
                                <th>SSI Pontos</th>
                                <th>SFI Pontos</th>
                                <th>AS Pontos</th>
                                <th>AF Pontos</th>
                                <th>Total</th>
                                <th>Duração</th>
                                <th>Detalhes</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
            {
                                <tr>

                                    <td>@Html.DisplayFor(modelItem => item.NomePaciente)</td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CSIPontos) @if (item.CSIPontos > 10.4)
                                        { <i class="fa fa-chevron-up" aria-hidden="true"></i> }
                                        else
                                        { <i class="fa fa-chevron-down" aria-hidden="true"></i> }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CFIPontos)  @if (item.CFIPontos > 6.6)
                { <i class="fa fa-chevron-up" aria-hidden="true"></i> }
                else
                { <i class="fa fa-chevron-down" aria-hidden="true"></i> }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SSIPontos)  @if (item.SSIPontos > 6.7)
                { <i class="fa fa-chevron-up" aria-hidden="true"></i> }
                else
                { <i class="fa fa-chevron-down" aria-hidden="true"></i> }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SFIPontos)  @if (item.SFIPontos > 4.7)
                { <i class="fa fa-chevron-up" aria-hidden="true"></i> }
                else
                { <i class="fa fa-chevron-down" aria-hidden="true"></i> }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ASPontos) @if (item.ASPontos > 11.7)
                { <i class="fa fa-chevron-up" aria-hidden="true"></i> }
                else
                { <i class="fa fa-chevron-down" aria-hidden="true"></i> }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ASPontos) @if (item.ASPontos > 1.0)
                { <i class="fa fa-chevron-up" aria-hidden="true"></i> }
                else
                { <i class="fa fa-chevron-down" aria-hidden="true"></i> }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Total) @if (item.Total > 41.1)
                { <i class="fa fa-chevron-up" aria-hidden="true"></i> }
                else
                { <i class="fa fa-chevron-down" aria-hidden="true"></i> }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TotalTempo)
                                    </td>
                                    <td style="text-align:center;"><a href="/Teste/Detalhes/@item.Id" class="btn btn-default"><span class="fa fa-external-link"></span></a></td>
                                </tr>
                            }

                    </table>
                </div>

            </div></div>