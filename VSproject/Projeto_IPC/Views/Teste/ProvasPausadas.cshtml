@model IEnumerable < Projeto_IPC.Models.TestesEmPausa>

@{
    ViewBag.Title = "Provas Pausadas";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

<div class="container">
    <div class="row">
        <div class="box box-primary">
            <div class="box-body">
                <table class="table table-striped table-bordered" id="tabela">
                    <thead>
                        <tr class="bg-primary" style="background-color:#4b646f;">
                            <th>Paciente</th>
                            <th>Tutor</th>
                            <th>Data de Começo</th>  
                            <th>Detalhes</th> 
                            <th>Continuar</th>                         
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)            {
                            <tr>

                                <td>@Html.DisplayFor(modelItem => item.NomePaciente)</td>
                                <td>@Html.DisplayFor(modelItem => item.NomeTutor)</td>                                
                                <td>
                                    @Html.DisplayFor(modelItem => item.DataComeco)
                                </td>
                                <td style="text-align:center;"><a href="/Teste/Detalhes/@item.IdTeste" class="btn btn-default"><span class="fa fa-external-link"></span></a></td>
                                <td style="text-align:center;"><a href="/Teste/ReComecar/@item.IdTeste" class="btn btn-default"><span class="fa fa-forward"></span></a></td>
                            </tr>
                        }

                </table>
            </div>

        </div>
    </div>
</div>



