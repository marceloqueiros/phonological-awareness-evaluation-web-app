
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Registo - Phosis</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.6 -->
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="/dist/css/AdminLTE.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="/plugins/iCheck/square/blue.css">
    <link rel="icon" type="image/png" href="/Imagens/Layout/favicon.png" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="hold-transition register-page" style="background-image: url('../../Imagens/WallPaper.jpg');">
    <div class="register-box">
        <div class="register-logo">
            <a href="../../index2.html"><b style="color:white;">Novo Registo</b></a>
        </div>

        <div class="register-box-body">
            <p class="login-box-msg">Registar</p>         

        @using (Html.BeginForm("Registo", "Inicio", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
                <div class="form-group has-feedback">
                    <input type="text" class="form-control" name="UserName" placeholder="Username">
                    <span class="glyphicon glyphicon-font form-control-feedback"></span>
                </div>
                @Html.ValidationMessage("UserName", "", new { @class = "text-danger" })
                <div class="form-group has-feedback">
                    <input type="text" class="form-control" name="NomeCompleto" placeholder="Nome Completo">
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                @Html.ValidationMessage("NomeCompleto", "", new { @class = "text-danger" })

                <div class="form-group has-feedback">
                    <input type="email" class="form-control" name="Email" placeholder="Email">
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                @Html.ValidationMessage("Email", "", new { @class = "text-danger" })

                <div class="form-group has-feedback">
                    <input type="password" class="form-control" name="Password1" placeholder="Password">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                @Html.ValidationMessage("Password1", "", new { @class = "text-danger" })

                <div class="form-group has-feedback">
                    <input type="password" class="form-control" name="Password2" placeholder="Repetir password">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                @Html.ValidationMessage("Password2", "", new { @class = "text-danger" })

                <div class="form-group has-feedback">
                    <input type="number" class="form-control" name="Telefone" placeholder="Telefone">
                    <span class="glyphicon glyphicon-phone form-control-feedback"></span>
                </div> 
                @Html.ValidationMessage("Telefone", "", new { @class = "text-danger" })              

                <div class="form-group has-feedback">   
                    <label>Data de nascimento</label>                 
                    <input type="date" class="form-control" name="datadenascimento">                    
                </div>
                @Html.ValidationMessage("datadenascimento", "", new { @class = "text-danger" })

                <div class="form-group has-feedback">
                    <input type="text" class="form-control" name="Morada" placeholder="Morada">
                    <span class="glyphicon glyphicon-pushpin form-control-feedback"></span>
                </div>
                @Html.ValidationMessage("Morada", "", new { @class = "text-danger" })

                <div class="form-group has-feedback">
                    <input type="text" class="form-control" name="Localidade" placeholder="Localidade">
                    <span class="glyphicon glyphicon-globe form-control-feedback"></span>
                </div>
                @Html.ValidationMessage("Localidade", "", new { @class = "text-danger" })

                <div class="form-group has-feedback">
                    <input type="text" class="form-control" name="CodPostal" placeholder="Código Postal">
                    <span class="glyphicon glyphicon-pushpin form-control-feedback"></span>
                </div>
                @Html.ValidationMessage("CodPostal", "", new { @class = "text-danger" })
                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox icheck">
                            <label>
                                <input type="checkbox" name="CheckBoxConcordar"> Eu concordo com os <a href="#">termos de utilização</a>.
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Criar</button>
                    </div>
                    <!-- /.col -->
                </div>
        }

            <a href="~/Inicio/Login" class="text-center">Já tenho conta!</a>
        </div>
        <!-- /.form-box -->
    </div>
    <!-- /.register-box -->
    <!-- jQuery 2.2.3 -->
    <script src="../../plugins/jQuery/jquery-2.2.3.min.js"></script>
    <!-- Bootstrap 3.3.6 -->
    <script src="../../bootstrap/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="../../plugins/iCheck/icheck.min.js"></script>
    <script>
  $(function () {
    $('input').iCheck({
      checkboxClass: 'icheckbox_square-blue',
      radioClass: 'iradio_square-blue',
      increaseArea: '20%' // optional
    });
  });
    </script>
</body>
</html>
