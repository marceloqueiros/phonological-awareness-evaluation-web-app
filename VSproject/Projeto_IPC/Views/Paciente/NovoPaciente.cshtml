
@{
    ViewBag.Title = "Adicionar Paciente - Phosis";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}
<div class="container">
    <div class="row">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Adicionar Paciente</h3>
            </div>
            <div class="box-body">

                @using (Html.BeginForm())
            {
                    <form class="form-horizontal" role="form">
                        <fieldset>
                            <!-- Form Name -->
                            <!-- Text input-->
                            <div class="form-group" style="padding-bottom:30px;">
                                <label class="col-sm-2 control-label" for="textinput">Nome</label>
                                <div class="col-sm-10">
                                    <input type="text" placeholder="Primeiro e último nome" name="nome" class="form-control">
                                </div>
                            </div>

                            @Html.ValidationMessage("nome", "", new { @class = "text-danger" })
                            <!-- Text input-->
                            <div class="form-group" style="padding-bottom:30px;">
                                <label class="col-sm-2 control-label" for="textinput">Tutor</label>
                                <div class="col-sm-10">
                                    <input type="text" placeholder="Nome do tutor" name="nomeTutor" class="form-control">
                                </div>
                            </div>

                            @Html.ValidationMessage("nomeTutor", "", new { @class = "text-danger" })
                            <!-- Text input-->
                            <div class="form-group" style="padding-bottom:30px;">
                                <label class="col-sm-2 control-label" for="textinput">Telefone</label>
                                <div class="col-sm-10">
                                    <input type="number" placeholder="Telefone" name="telefone" class="form-control">
                                </div>
                            </div>

                            @Html.ValidationMessage("telefone", "", new { @class = "text-danger" })
                            <!-- Text input-->
                            <div class="form-group" style="padding-bottom:30px;">
                                <label class="col-sm-2 control-label" for="textinput">Email</label>
                                <div class="col-sm-10">
                                    <input type="email" placeholder="Email" name="email" class="form-control">
                                </div>
                            </div>

                            @Html.ValidationMessage("email", "", new { @class = "text-danger" })
                            <!-- Text input-->
                            <div class="form-group" style="padding-bottom:30px;">
                                <label class="col-sm-2 control-label" for="textinput">Data de Nascimento</label>
                                <div class="col-sm-10">
                                    <input type="date" class="form-control" name="datanascimento">
                                </div>
                            </div>

                            @Html.ValidationMessage("datanascimento", "", new { @class = "text-danger" })

                            <div class="form-group" style="padding-bottom:30px;">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <div class="pull-right">
                                        <button type="submit" class="btn btn-primary">Guardar</button>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                }
            </div>
            <!-- /.box-body -->
        </div>
    </div><!-- /.row -->
</div>